/**app.wxss**/
page {
  /* 定义一些颜色变量 */
  --color-primary: #ffd101;
  --color-primary-dark: #dfb600;

  --color-white-dark: #fafafa;

  --color-gray-light: #f7f7fa;
  --color-gray: #dddddd;
  --color-gray-dark: #bbbbbb;
  --color-gray-max: #888;

  --color-black-light: #222222;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

/* 下面是没有授权的 */
.unAuth {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-content: center;
}

.unAuth text {
  margin: 600rpx 0 30rpx 0;
  text-align: center;
  font-size: 34rpx;
}

@import '/packages/weui/weui-wxss/dist/style/weui.wxss'