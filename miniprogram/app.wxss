/**app.wxss**/
page {
  /* 定义一些颜色变量 */
  --color-primary: #ffd101;
  --color-primary-dark: #dfb600;
  --color-primary-light: #fff7d4;

  --color-white-dark: #fafafa;

  --color-gray-light: #f7f7fa;
  --color-gray-normal:#eeeeee;
  --color-gray: #dddddd;
  --color-gray-dark: #bbbbbb;
  --color-gray-max: #888;

  --color-black-min:#414141;
  --color-black-light: #222222;

  --color-black-transparent: rgba(0,0,0,0.6);
  --color-ltblack-transparent: rgba(0,0,0,0.05);

  --color-red: #dc3545;
  --color-red-dark: #8b0000;

  --color-green: #22ad6d;
  --color-green-dark: #015e32;

  --color-badge-A: #ffa601;
  --color-badge-B: #004ad3;
  --color-badge-C: #258100;

  --color-comment-paper-white: #ffffff;
  --color-comment-paper-yellow: #fff7ee;
  --color-comment-paper-green: #ebffe9;
  --color-comment-paper-pink: #ffeffe;
  --color-comment-tape: thistle;

  --img-default: url(data:image/svg+xml;base64,);
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

/* 下面是没有授权的 */
.unAuth {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-content: center;
}

.unAuth text {
  margin: 600rpx 0 30rpx 0;
  text-align: center;
  font-size: 34rpx;
}

@import '/packages/weui/weui-wxss/dist/style/weui.wxss';
@import "./pages/public/wxss/iconfont.wxss"