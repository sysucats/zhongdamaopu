/* pages/news/detailNews/detailNews.wxss */

.news-box {
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  /* margin: 20rpx; */
  box-shadow: 0rpx 0rpx 30rpx var(--color-gray);
  border-radius: 20rpx;
  background-color: #FFFFFF;
}

button {
  width: 47%;
  display: inline-block;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: var(--color-primary);
  color: var(--color-text-onPrimary);
}

button+button {
  margin-left: 6%;
}


.news {
  font-weight: 300;
  /* margin: 10rpx 0; */
}

.news.title {
  font-size: 38rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.news.row-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 18rpx;
}


.news.user {
  font-size: 26rpx;
  color: var(--color-gray-max);
  font-weight: 400;
}

.news.time {
  font-size: 26rpx;
  color: var(--color-gray-dark);
  flex-grow: 1;
  text-align: right;
}

.news.content {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  white-space: pre-wrap;
  font-weight: 400;
  color: var(--color-gray-max);

}

.news.editTime {
  font-size: 26rpx;
  color: var(--color-gray-dark);
  padding-bottom: 20rpx;
  margin-bottom: 5rpx;

  border-bottom:1rpx solid var(--color-gray-normal);

  /* border-bottom: dotted black; */
  /* border-color:var(--color-black-light) */
  /* flex-grow: 1; */
  /* text-align: right; */
}

.news.err {
  font-size: 40rpx;
  font-weight: bold;
}


.loading image {
  width: 165.9rpx;
  height: 90.3rpx;
  margin: 10rpx 292rpx;
  margin-top: 40rpx;
}

.news.tag {
  width: 80rpx;
  height: 38rpx;
  border-radius: 15rpx;
  margin: 0 15rpx 0 0;
  
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  line-height: 38rpx;

  background-color: var(--color-primary-light);
  color: var(--color-primary);
}

.album {
  width: 100%;
  text-align: center;
  background-color: var(--color-gray-light);
  color: var(--color-gray);
  font-size: 28rpx;
  padding: 5rpx 0;
  margin-bottom: 40rpx;
}

.album-block {
  display: flex;
  flex-wrap: wrap;
  background-color: var(--color-gray-light);
}

.alb-image {
  width: 207rpx;
  height: 207rpx;
  box-sizing: border-box;
  margin: 5rpx 5rpx;
  background-color: white;
}

.single-image {
  /* width: 100%; */
  height: 200rpx;
}