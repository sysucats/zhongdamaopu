page {
  width: 750rpx;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}

.mainF-block {
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.mainF-block .title {
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
}

button {
  width: 45%;
  display: inline-block;
  font-size: 35rpx;
  box-sizing: border-box;
}

button + button {
  margin-left: 10%;
  /* float: right; */
}

#container {
  display: flex;
  align-content: space-between;
}

.category-box {
  width: 100%;
}

button.primary {
  background-color: #ffd110;
}

button.long {
  margin: 20rpx 0 0 0;
  width: 100%;
}

button.short {
  width: 12%;
  height: 100%;
  margin: 2%;
  padding: 2%;
  font-size: 24rpx;
  line-height: 24rpx;
}

.category {
  width: 100%;
  margin-top: 30rpx;
  border-bottom: 4rpx #bbb solid;
  /* background-color: #fafafa; */
  font-weight: normal;
  padding: 10rpx;
  color: #888;
  display: flex;
  align-content: space-around;
  justify-content: left;
  align-items: left;
  font-size: 40rpx;
}

.sub-option {
  width: 100%;
  border-bottom: 2rpx #ffd110 solid;
  /* background-color: #fafafa; */
  padding: 10rpx;
  color: #222;
  display: flex;
  align-content: space-around;
  justify-content: center;
  align-items: center;
}

.content {
  width: 50%;
  display: inline-block;
}

.submit {
  margin-top: 10rpx;
  margin-left: 30rpx;
}

input.content {
  border-bottom: 2rpx #ffd110 solid;
  background-color: #fafafa;
}

button.bottom {
  width: 100%;
  background-color: #ffd110;
}

.floating-box{
  position: fixed;
  bottom: 20rpx;
  margin: 20rpx 3rpx;
  padding: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx gainsboro;
  border-radius: 20rpx;
  background-color: rgba(255,255,255,0.95);
  width: 650rpx;
}

.bottom-clear-box {
  height: 100rpx;
  opacity: 0;
}