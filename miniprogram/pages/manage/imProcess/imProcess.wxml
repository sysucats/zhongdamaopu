<canvas style="width: 1200px; height: 1200px; left: 1000px; position: fixed;" id="bigPhoto" type="2d"></canvas>
<block wx:if="{{auth}}">
  <!-- 原图预览区域 -->
  <view class="image-blocks">
    <view class="image-block">
      <view class='title'>原图</view>
      <image mode='aspectFit' wx:if='{{origin.path}}' src='{{origin.path}}' bindtap='preview' data-src='{{origin.path}}'></image>
      <view wx:else class="no-image"></view>
    </view>
    <view class="image-block">
      <view class='title'>缩略图</view>
      <image mode='aspectFit' wx:if='{{images_path.compressed}}' src='{{images_path.compressed}}' bindtap='preview' data-src='{{images_path.compressed}}'></image>
      <view wx:else class="no-image"></view>
    </view>
    <view class="image-block">
      <view class='title'>水印图</view>
      <image mode='aspectFit' wx:if='{{images_path.watermark}}' src='{{images_path.watermark}}' bindtap='preview' data-src='{{images_path.watermark}}'></image>
      <view wx:else class="no-image"></view>
    </view>
  </view>
  
  <!-- 处理状态信息 -->
  <view class="status-info">
    <view>[{{now}}/{{total}}] 目前阶段：{{phase}} | {{phase2str[phase]}}</view>
    <view>选中照片: {{selectedCount}}/{{photoList.length}}</view>
  </view>
  
  <!-- 操作按钮 -->
  <view class="buttons">
    <button class='short' bindtap='clickProcessBtn' data-test="{{true}}">{{processing ? "停止" : "试运行"}}</button>
    <button class='primary' bindtap='clickProcessBtn'>{{processing ? "停止" : "开始处理"}}</button>
  </view>
  
  <!-- 功能说明 -->
  <view class="info-block">
    <view>【功能说明】</view>
    <view>1. 首次使用，请点击试运行，再点击缩略图和水印图，查看是否正常</view>
    <view>2. 水印会使用系统字体，昵称包含Emoji时，建议使用iOS设备</view>
    <view>3. 选中照片后点击"开始处理"进行批量处理</view>
  </view>
  
  <!-- 待处理照片列表 -->
  <view class="photo-list">
    <view class="list-header">
      <view class="select-all">
        <checkbox checked="{{allSelected}}" bindtap="toggleSelectAll" /> 全选
      </view>
      <view class="selected-count">已选中 {{selectedCount}} 张照片</view>
    </view>
    
    <view class="photos-container">
      <view class="photo-item" wx:for="{{photoList}}" wx:key="_id" wx:for-index="index">
        <view class="photo-checkbox">
          <checkbox checked="{{item.checked}}" bindtap="togglePhotoSelect" data-index="{{index}}" />
        </view>
        <view class="photo-preview" bindtap="previewPhoto" data-index="{{index}}">
          <image wx:if="{{item.showImg}}" src="{{item.signedPhotoId}}" mode="aspectFill"></image>
          <view class="not-show-img" wx:else>点击显示照片</view>
        </view>
        <view class="photo-info">
          <view class="photo-id">ID: {{item._id}}</view>
          <view class="photo-user">上传者: {{item.userInfo.nickName || '未知'}}</view>
          <view class="photo-date">时间: {{item.formattedDate}}</view>
        </view>
        <view class="photo-actions">
          <button class="btn-small btn-danger" bindtap="deletePhoto" data-index="{{index}}">删除</button>
          <button class="btn-small btn-primary" bindtap="processSinglePhoto" data-index="{{index}}">处理</button>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 错误信息 -->
  <view class="info-block" wx:if="{{errMsg}}">
    <view>【错误信息】</view>
    <view bind:tap="copyText" data-text="{{errMsg}}">{{errMsg}}</view>
    <view>【错误堆栈】</view>
    <view bind:tap="copyText" data-text="{{errStack}}">{{errStack}}</view>
  </view>
</block>

<!-- 未授权提示 -->
<no-auth wx:else tip-text="{{tipText}}"></no-auth>