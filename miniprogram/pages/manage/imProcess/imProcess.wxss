page {
  width: 750rpx;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}

image {
  width: 690rpx;
  height: 690rpx;
  background-color: linen;
}

button {
  width: 45%;
  display: inline-block;
  font-size: 35rpx;
  box-sizing: border-box;
}

button.primary {
  background-color: var(--color-primary);
}

button.long {
  margin: 20rpx 0 0 0;
  width: 100%;
}

button.short {
  width: 12%;
  height: 100%;
  margin: 2%;
  padding: 2%;
  font-size: 24rpx;
  line-height: 24rpx;
}

.title {
  text-align: center;
  font-weight: bold;
  margin: 30rpx 0 10rpx 0;
}