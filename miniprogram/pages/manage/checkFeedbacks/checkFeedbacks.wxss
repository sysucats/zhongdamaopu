page {
  width: 750rpx;
  padding: 30rpx 30rpx 150rpx 30rpx;
  box-sizing: border-box;
}

button {
  width: 47%;
  display: inline-block;
  font-size: 30rpx;
  box-sizing: border-box;
}

button.primary {
  background-color: var(--color-primary);
  margin-top:30rpx;
}

button + button {
  margin-left: 5%;
  /* float: right; */
}

button.long {
  margin: 20rpx 0 0 0;
  width: 100%;
}

.bottom-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0rpx 40rpx 40rpx 40rpx;
  border-top: 1rpx solid var(--color-gray);
  background-color: #FFFFFF;
  width: 100%;
  box-sizing: border-box;
}

.verify-box {
  box-sizing: border-box;
  padding: 40rpx 40rpx 30rpx 40rpx;
  margin-bottom: 50rpx;
  box-shadow: 0rpx 0rpx 30rpx var(--color-gray);
  border-radius: 20rpx;
  background-color: #FFFFFF;
}

.feedback-info {
  font-size: 30rpx;
  font-weight: 400;
  margin: 10rpx 0;
}

.label {
  font-size: 30rpx;
  font-weight: 400;
}

.label.user {
  color: var(--color-gray-max);
}

.label.reply {
  color: var(--color-primary-dark);
  margin: 10rpx 0;
}

.label.cat text {
  font-weight: bold;
  text-decoration: underline;
}

#total-count {
  font-size: 30rpx;
  font-weight: 300;
  color: var(--color-gray-max);
  box-shadow: 0rpx 0rpx 30rpx var(--color-gray);
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  background-color: #FFFFFF;
}

#container {
  width: 750rpx;
  height: 100%;
  overflow: hidden;
}