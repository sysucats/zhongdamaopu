/* miniprogram/pages/manage/managers.wxss */
page {
  width: 750rpx;
}

button {
  width: 45%;
  display: inline-block;
  font-size: 35rpx;
  box-sizing: border-box;
}

button.primary {
  background-color: #ffd101;
}

button + button {
  margin-left: 10%;
  /* float: right; */
}

button.long {
  margin: 20rpx 0 0 0;
  width: 100%;
}

#search {
  width: 100%;
}

/* 搜索框CSS */
#search .input-block {
  align-items: center;
  padding: 15rpx 10rpx;
  margin: 20rpx 20rpx 30rpx 20rpx;
  box-shadow: 0rpx 0rpx 10rpx #ddd;
  border-radius: 10rpx;
}

#search .input-icon {
  width: 10%;
  height: 1.4rem;
  background-color: white;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  display: inline-block;
}

#search .input-icon image {
  width: 60%;
  height: 100%;
  margin: 0 20%;
}

#search input.name {
  width: 90%;
  height: 1.4rem;
  line-height: 1.4rem;
  /* background-color: rgb(255, 237, 193); */
  background-color: white;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  display: inline-block;
  box-sizing: border-box;
}

/* 下面开始用户管理的CSS */
.user-box {
  box-sizing: border-box;
  padding: 15rpx 10rpx;
  margin: 20rpx 20rpx 50rpx 20rpx;
  box-shadow: 0rpx 0rpx 10rpx #ddd;
  border-radius: 10rpx;
}

.user-box .info {
  border-bottom: 1px rgba(221, 221, 221, 0.377) solid;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.user-box image.avatar {
  width: 80rpx;
  height: 80rpx;
}

.name-and-others {
  display: inline-block;
  margin-left: 10rpx;
}

.name-and-others .nickName,
.unknow-info {
  font-size: 32rpx;
}

.name-and-others .gender,
.name-and-others .area {
  font-size: 30rpx;
  color: #888;
  display: inline-block;
}

.operation {
  width: 100%;
  display: flex;
  align-items: flex-end;
}

picker.manager-level {
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 2rpx #ffd110 solid;
  background-color: #fafafa;
  padding: 10rpx;
  color: #222;
  display: inline-block;
}

button.manager-update {
  width: 200rpx;
  font-size: 32rpx;
  margin-left: 20rpx;
  display: inline-block;
}

.index {
  font-size: 28rpx;
  color: #dfdfdf;
  margin-left: auto;
  display: inline-block;
}