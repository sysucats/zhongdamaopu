/* pages/recognize/recognize.wxss */
page {
  background-color: var(--color-gray-light);
}

#positionWrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  transition: top 0.5s ease-in-out, transform 0.5s ease-in-out;
}

#positionWrapper.flowUp {
  top: 4%;
  transform: translateX(-50%);
}

#photoBox, #resultBox {
  width: 675rpx;
  background-color: white;
  box-shadow: 13rpx 13rpx 30rpx var(--color-gray);
  border-radius: 15rpx;
  overflow: hidden;
  box-sizing: border-box;
  margin-bottom: 50rpx;
}

#previewArea {
  width: 675rpx;
  height: 675rpx;
  background-color: var(--color-gray-dark);
  position: relative;
}

#authTips {
  width: 90%;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

#authTips text {
  font-size: 30rpx;
  color: white;
}

#authTips button {
  width: 300rpx;
  margin-top: 40rpx;
  background-color: var(--color-primary);
  border-radius: 20rpx;
  font-size: 30rpx;
}

#cameraPreview, #photoPreview {
  width: 100%;
  height: 100%;
}

#cameraControll {
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  overflow: hidden;
  height: 180rpx;
  transition: height 0.5s ease-in-out;
}

#cameraControll.shrink {
  height: 0;
}

#cameraControll .btn {
  width: 80rpx;
  height: 80rpx;
}

#shutter {
  width: 100rpx;
  height: 100rpx;
  background-color: var(--color-primary);
  border-radius: 50rpx;
  border: 8rpx solid white;
  box-shadow: 0 0 0 8rpx var(--color-primary);
}

#shutter::after {
  /*去掉微信自带按钮组件样式*/
  border: none;
}

#shutter:active {
  background-color: var(--color-primary-dark);
}

#resetButton {
  width: 40rpx;
  height: 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 5%;
  left: 95%;
  transform: translateX(-50%) translateY(-50%);
}

#resetButton image {
  width: 100%;
  height: 100%;
}

#shutter[disabled] {
  background-color: var(--color-gray);
}

#resultBox {
  padding: 20rpx 40rpx;
}

#resultBox .title{
  font-size: 36rpx;
  font-weight: 500;
  color: var(--color-primary);
}

#resultBox .footnote {
  font-size: 26rpx;
  color: var(--color-gray-max);
}

.catCard {
  font-size: 24rpx;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}

.catCard:active {
  background-color: var(--color-gray-light);
}

.catCard + .catCard {
  border-top: 1px solid var(--color-gray-light);
}

.catCard .photo {
  width: 132rpx;
  height: 132rpx;
  border-radius: 66rpx;
}

.catCard .info {
  flex: 1;
  margin-left: 32rpx;
}

.catCard .info .line {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.catCard .info .line.first {
  margin-bottom: 20rpx;
}

.catCard .info .name {
  height: 30rpx;
  font-size: 33rpx;
  line-height: 30rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
}

.catCard .info image.gender {
  height: 27rpx;
  width: 27rpx;
  margin-right: 30rpx;
  margin-left: 8rpx;
}

.catCard .info .adopt {
  padding: 0 10rpx;
  height: 30rpx;
  border-radius: 15rpx;
  font-size: 18rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: var(--color-primary);
  margin-left: 8rpx;
}

.catCard .info .to_star {
  height: 30rpx;
  border-radius: 15rpx;
  font-size: 18rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: var(--color-gray-light);
  padding: 0 10rpx;
  margin: 0 10rpx;
}

.catCard .line image.icon {
  height: 26rpx;
  width: 26rpx;
  min-width: 26rpx;
  margin-right: 20rpx;
}

.catCard .line .characteristics {
  line-height: 0.9rem;
}

.catCard .prob {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-primary);
  width: 100rpx;
  text-align:right;
}
