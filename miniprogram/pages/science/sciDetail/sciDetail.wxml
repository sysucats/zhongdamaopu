<!--miniprogram/pages/science/sciDetail/sciDetail.wxml-->

<swiper indicator-dots="1" indicator-active-color="#ffd101" circular="1" current="{{cate_current-1}}" bindchange="changeCate">
  <swiper-item wx:for="{{images}}" wx:key="unique">
    <image src='{{item}}'></image>
  </swiper-item>
</swiper>

<view class='qna {{item.active? "active": ""}}' wx:for='{{qnas}}' wx:key='{{item.question}}' bindtap='activateQna' data-index='{{index}}' hidden='{{item.cate != cate_active}}'>
  <view class='question'>{{item.question}}</view>
  <view class='answer'><text>{{item.answer}}</text></view>
</view>