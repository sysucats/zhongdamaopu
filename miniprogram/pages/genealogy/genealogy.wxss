/* miniprogram/pages/genealogy/genealogy.wxss */

/* 上面的是旧的东西 */
page {
  height: 100%;
  background-color: #f7f7fa;
}
/* 下面开始猫卡布局 */
scroll-view {
  -webkit-overflow-scrolling: touch;
  z-index: 0;
  background-color: #f7f7fa;
}

.cards{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  /* padding-top: 20rpx; */
  /* 第一张card的margin-top */
}

.card {
  margin: 30rpx 0;
  font-size: 24rpx;
  line-height: 24rpx;
  width: 635rpx;
  border-radius: 15rpx;

  box-sizing: border-box;
  background-color: white;
  /* overflow: hidden; */

  box-shadow: 13rpx 13rpx 30rpx #ddd;
  position: relative;
  /* TODO：重写为flex布局 */
}

.card view.image {
  /* width: 615rpx; */
  height:590rpx;
  border-radius: 15rpx 15rpx 0 0;
  position: relative;
  overflow: hidden;
}

.card view.image .image-title{
  /* width: 615rpx; */
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #222;
  opacity: .4;
  text-align: center;
  color: #fff;
  position: absolute;
  bottom: 0;
}

.card view.image image {
  /* width: 615rpx; */
  width: 100%;
  height: 590rpx;
  background-color: #eee;
	background-image: url(data:image/svg+xml;base64,);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 50% 50%;
  position: absolute;
}

.card view.image.to_star image {
  filter: grayscale(100%);
}

.card .info {
  padding: 35rpx 35rpx 20rpx 35rpx;
}

.card .info .line {
  display: flex;
  align-items: flex-start;
  margin-bottom: 18rpx;
}

#firstLine{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  margin-left: 3rpx;
}

.card .info .name {
  height: 30rpx;
  font-size: 33rpx;
  line-height: 30rpx;

  font-weight: 600;
  letter-spacing: 3rpx;
  /* margin-right: 10rpx; */
}

.card .info image.gender {
  height: 27rpx;
  width: 27rpx;
  margin-right: 30rpx;
  margin-left: 8rpx;
}

.card .info .adopt {
  padding: 0 10rpx;
  height: 30rpx;
  border-radius: 15rpx;
  font-size: 18rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: #ffd101;
  margin-left: 8rpx;
}

.card .info .to_star {
  height: 30rpx;
  border-radius: 15rpx;
  font-size: 18rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: #e8e8e8;
  
  padding: 0 10rpx;
  margin: 0 10rpx;
}

.card .info .popularity {
  margin-left: auto;
  order: 2;
  display: flex;
  align-items: center;
}
.popularity image {
  height: 20rpx;
  width: 39rpx;
  margin-right: 8rpx;
}

.card .line image.icon {
  height: 26rpx;
  width: 26rpx;
  margin-right: 20rpx;
}

.card .line .index {
  margin-left:auto;
  order:2;
  color:#bbb;
}
.card .line .characteristics{
  line-height: 0.9rem;
}

.loading image {
  width: 165.9rpx;
  height: 90.3rpx;
  margin: 10rpx 292rpx;
}
.loadnomore image {
  width: 750rpx;
  height: 100rpx;
  margin: 10rpx 0;
}

/* 新图标签 */
.card .label {
  display: inline-block;
  text-align: left;
  /* border-color: #cf590c;
  background-color: #f2711c; */
  background-color: #ffd101;
  border-color: #dfb600;
  color: #222;
  border-radius: 0 10rpx 10rpx 0;
  padding: 10rpx;
  font-size: 22rpx;
  position: absolute;
  top: 30rpx;
  left: -17.5rpx;
  z-index: 1;
}

.card .label::after {
    position: absolute;
    top: 100%;
    right: auto;
    left: 0;

    border-style: solid;
    border-width: 0 17.5rpx 17.5rpx 0;
    border-color: transparent;
    border-top-color: inherit!important;
    background-color: transparent!important;
    border-right-color: inherit!important;

    content: '';
    width: 0;
    height: 0;
}

/* 广告栏 */

.card-ad {
  /* margin: 20rpx 67.5rpx 50rpx 67.5rpx; */
  margin: 15rpx 0;
  width: 635rpx;
  border-radius: 15rpx;
  background-color: white;
  box-shadow: 13rpx 13rpx 30rpx #ddd;
  overflow: hidden;
  /* overflow: visible; */
  /* flex-grow: 1; */

  display: flex;
  justify-content: center;
  align-items: center;

  min-height: 200rpx;
  box-sizing: border-box;

}

.card-ad.hidden {
  display: none;
}

/* 顶部的搜索框还有筛选 */
#search {
  width: 750rpx;
  /* background-color: #ffd101; */
  background-color: #f7f7fa;
  box-sizing: border-box;

  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
}

#search.shadow {
  box-shadow: 0 0 10rpx rgb(167, 167, 167);
}

#search .input-block {
  width: 87%;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  margin-left: 25rpx;
}

#search .input-icon {
  width: 10%;
  height: 2.2rem;
  background-color: white;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  display: inline-block;
}

#search .input-icon image {
  width: 60%;
  height: 100%;
  margin: 0 20%;
}

#search input.name {
  width: 90%;
  height: 2.2rem;
  line-height: 2.2rem;
  /* background-color: rgb(255, 237, 193); */
  background-color: white;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  display: inline-block;
  box-sizing: border-box;
  margin: 0;

  /* font-size: 1.1rem; */
  font-size: 80%;
}

#search .icon {
  background-color: yellow;
  width: 5%;
  height: 100%;
}

#search .filter-btn {
  /* background-color: yellow; */
  width: 10%;
  /* height: 1.4rem; */
  height: 55%;
  padding: 10rpx 0 10rpx 20rpx;
}

.filter-btn image {
  width: 70%;
  height: 100%;
}

/* 过滤器点开的部分 */
#filter-block {
  width: 750rpx;
  position: fixed;
  z-index: 2;
  background-color: rgba(0, 0, 0, .8);
}

#filter-block .tri {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0 15rpx 25rpx 15rpx;
  border-color: transparent transparent #fff transparent;
  position: absolute;
  top: -15rpx;
  right: 60rpx;
}

#filter-block .filters {
  width: 100%;
  background-color: white;
  display: flex;
  flex-wrap: nowrap;
}

.f-column {
  padding: 0rpx 10rpx;
  height: 400rpx;
}
.f-column .padding-block {
  height: 20rpx;
}
.f-column-1 {
  width: 31%;
  box-sizing: border-box;
}
/* .f-column-2 {
  width: 40%;
} */
/* .f-column-3 {
  flex-grow: 1;
  display: flex;
  justify-content: space-between;
} */

.f-column .item {
  height: 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  margin: 10rpx;
  padding: 2rpx 20rpx;
  display: inline-flex;
  flex-wrap: nowrap;
  border: 3rpx solid transparent;
}

.f-column .item.active {
  color: #ffd101;
  border: 3rpx solid #ffd101;
  border-radius: 40rpx;
}

.f-column.main .item.active {
  color: black;
  background-color: #ffd101;
  border-radius: 40rpx;
}

.f-column .item .right-arrow {
  width: 20rpx;
  height: 40rpx;
  margin-left: 10rpx;

  display: inline-block;
}

.right-arrow image {
  height: 20rpx;
  width: 20rpx;
}

#filter-block .divider {
  width: 100%;
  height: 1rpx;
  background-color: #dedede;
}

#filter-block .buttons {
  width: 100%;
  background-color: #dedede;
  display: flex;
  justify-content: space-between;
}

#filter-block .buttons .btn {
  /* 留1rpx给中间的分割线 */
  width: 374.8rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: white;
  color: #bbb;
  text-align: center;
}

#filter-block .buttons .active {
  color: #ffd101;
}

.searchPlaceholderStyle{
  display: flex;

