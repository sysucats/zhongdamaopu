page {
  width: 750rpx;
  padding: 50rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}
.userInfo {
  width: 100%;
  padding: 0rpx 0rpx 10rpx 0;
  display: flex;
}

.userInfo image {
  height: 50rpx;
  width: 50rpx;
  margin-right: 10rpx;
  border-radius: 5rpx;
}

.userInfo-cat {
  width: 520rpx;
}

.userInfo text {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
}

.update-userInfo {
  font-size: 20rpx;
  line-height: 50rpx;
  color: var(--color-gray-dark);
  margin-left: auto;
}

.need-notice {
  width: 100%;
  padding: 0rpx 0rpx 30rpx 0;
  display: flex;
  align-items: center;
}

.need-notice .my-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid var(--color-gray-dark);
  border-radius: 20%;
  padding: 5rpx;
  display: inline-block;
  box-sizing: border-box;
}

.need-notice .my-checkbox .my-checkbox-core {
  width: 100%;
  height: 100%;
  border-radius: 20%;
  background-color: var(--color-gray-light);
}

.need-notice .my-checkbox.checked .my-checkbox-core {
  background-color: var(--color-primary);
}

.need-notice text {
  margin-left: 10rpx;
  height: 100%;
  line-height: 100%;
  font-size: 30rpx;
}

.card {
  box-shadow: 0 0 10rpx var(--color-gray-dark);
  padding: 30rpx 30rpx 15rpx 30rpx;
  margin: 30rpx 0;
  border-radius: 20rpx;
}

.selected-image {
  border-radius: 3rpx;
  width: 630rpx;
  height: 630rpx;
  background-color: var(--color-gray-dark);
  margin-bottom: 30rpx;
}

button {
  width: 300rpx;
  display: inline-block;
  box-sizing: border-box;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 20rpx 30rpx;
  border: 1rpx solid var(--color-gray-max);
  border-radius: 15rpx;
  margin-top: 15rpx;
}

button.long {
  /* width: 690rpx; */
  width: 100%;
}

button.primary {
  background-color: var(--color-primary);
}

button + button {
  margin-left: 30rpx;
  /* float: right; */
}


.label {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 5rpx;
  margin-left: 10rpx;
}

picker, input {
  border-bottom: 2rpx var(--color-primary) solid;
  background-color: var(--color-white-dark);
  padding: 15rpx;
  margin-bottom: 20rpx;
  color: var(--color-black-light);
}

/* 统一设置相关 */
.set-all {
  box-shadow: 0 0 10rpx var(--color-gray-max);
  padding: 30rpx 30rpx 20rpx 30rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
}

.set-all .title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
}

.tip {
  font-size: 24rpx;
  margin-bottom: 5rpx;
}