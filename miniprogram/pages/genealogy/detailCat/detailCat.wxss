.badge-level-A .badge-item-name {
  color: var(--color-badge-A);
}

.badge-level-B .badge-item-name {
  color: var(--color-badge-B);
}

.badge-level-C .badge-item-name {
  color: var(--color-badge-C);
}

.badge-item-count, .user-badge-item-count {
  font-size: 18rpx;
  background-color: var(--color-gray-light);
  opacity: 0.7;
  padding: 3rpx 6rpx;
}

.badge-item-count.hidden {
  opacity: 0.0;
}
