@import "../../../public/wxss/iconfont.wxss";
/* 变量定义：暖萌奶油风 */
page {
  --text-main: #5D4037;
  --text-sub: #8D6E63;
  --line-color: #E6D0B3;
  --blue: #A2D2FF;
  --pink: #FFC8DD;
  --mainNode: #FFB347;  /* var(--color-primary) */
  /* isLonely发光颜色层次 */
  --neon-1: rgba(255, 194, 102, 0.42);
  --neon-2: rgba(255, 124, 76, 0.30);
  --neon-3: rgba(255, 87, 87, 0.15);
}

.viewport {
  width: 100vw;
  height: 100vh;
  background-color: var(--color-gray-light);
  overflow: hidden;
  position: relative;
}

/* 孤单提示 */
.lonely-tip {
  position: absolute;
  top: 30rpx;
  left: 0;
  width: 100%;
  text-align: center;
  color: var(--color-gray-max);
  font-size: 26rpx;
  z-index: 50;
}

/* 背景 */
.bg-fixed {
  position: absolute;
  left: 0; top: 0;
  width: 100%; height: 100%;
  z-index: 0;
  pointer-events: none;
}

.board {
  width: 0; height: 0;
  position: absolute; left: 50%; top: 50%;
  transition: transform 0.6s cubic-bezier(0.19, 1, 0.22, 1);
}

/* 节点 */
.node {
  position: absolute;
  width: 0;
  height: 0;
  overflow: visible;
  z-index: 20;
  transition: opacity 0.3s, transform 0.3s, left 0.5s cubic-bezier(0.34, 1.56, 0.64, 1), top 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.avatar-box {
  position: absolute;
  width: var(--size);
  height: var(--size);
  left: 0; top: 0;
  transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(162, 130, 100, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s, opacity 0.3s;
  z-index: 1;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid var(--color-gray);
  box-sizing: border-box;
}
.avatar.male { 
  border-color: var(--blue);
}
.avatar.female { 
  border-color: var(--pink);
}
.level-0 .avatar { 
  border-color: var(--mainNode); 
  border-width: 6rpx; 
}

/* 角标 */
.badge {
  position: absolute;
  top: 0;
  right: 0;
  background: #FF6B6B;
  color: white;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translate(20%, -20%);
  z-index: 5;
}

/* 名字 */
.name {
  position: absolute;
  left: 0;
  top: 0;
  transform: translate(-50%, calc(var(--size) / 2 + var(--gap, 10rpx)));
  font-size: 22rpx;
  color: var(--text-main);
  background: #fff;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  font-weight: bold;
  white-space: nowrap;
  pointer-events: none;
  z-index: 2;
}

/* 更多节点 */
.more-icon {
  font-size: 32rpx;
  color: var(--color-gray-max);
  font-weight: bold;
  background: #F5F5F5;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #CCC;
}

/* 连线 */
.line {
  position: absolute;
  height: 2rpx;
  background: var(--line-color);
  transform-origin: 0 50%;
  z-index: 1; pointer-events: none;
  transition: opacity 0.3s, width 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}
.line.dashed {
  background: transparent;
  border-top: 2rpx dashed #CCC;
}

.label-box { 
  position: absolute;
  left: 50%;
  top: 50%;
}
.label {
  font-size: 18rpx;
  background: #fff;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  color: var(--text-sub);
  border: 1rpx solid #FFF0D6;
  max-width: 220rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 交互状态 */
.has-expanded .node:not(.active):not(.child-node):not(.level-0):not(.more-node) { 
  opacity: 0.1; 
}
.has-expanded .line.level-1 { 
  opacity: 0.2; 
}
.has-expanded .line.level-2, .has-expanded .line.level-3, .has-expanded .line.active-line { 
  opacity: 1; 
}
.has-focused-child .child-node:not(.active) { 
  opacity: 0.1; 
}
.has-focused-child .line.level-2:not(.active-line) { 
  opacity: 0.1; 
}
.has-focused-child .more-node { 
  opacity: 0.1; 
}
.node.active .avatar-box {
  transform: translate(-50%, -50%) scale(1.1);
  border-color: var(--mainNode);
}

/* 次级展开入场 */
.child-node.enter .avatar-box,
.more-node.enter .avatar-box {
  transform: translate(-50%, -50%) scale(0.8); opacity: 0;
}

.line.enter { opacity: 0; }

/* 呼吸光环（仅中心节点孤单时显示） */
.halo {
  position: absolute;
  left: 0; top: 0;
  width: var(--size);
  height: var(--size);
  transform: translate(-50%, -50%);
  z-index: 0;
  pointer-events: none;
}
.halo-ring {
  position: absolute;
  left: 50%; top: 50%;
  border: 1rpx solid #fff;
  border-radius: 50%;
  opacity: 0;
  transform: translate(-50%, -50%) scale(1);
  animation: haloPulse 2.8s ease-out infinite;
  animation-fill-mode: both;
  will-change: transform, opacity;
  transform-origin: center;
  backface-visibility: hidden;
  /* 霓虹发光效果：多层外发光 + 内发光 */
  box-shadow:
    0 0 10px var(--neon-1),
    0 0 22px var(--neon-2),
    0 0 45px var(--neon-3),
    inset 0 0 8px var(--neon-1);
  /* 内部淡淡的辉光 */
  background: radial-gradient(circle, rgba(255,255,255,0.12) 28%, rgba(255,255,255,0.04) 40%, transparent 60%);
}
.halo-ring.ring1 {
  width: calc(var(--size));
  height: calc(var(--size));
  animation-delay: -0s;
}
.halo-ring.ring2 {
  width: calc(var(--size) + 80px);
  height: calc(var(--size) + 80px);
  animation-delay: -0.9s;
}
.halo-ring.ring3 {
  width: calc(var(--size) + 160px);
  height: calc(var(--size) + 160px);
  animation-delay: -1.8s;
}

@keyframes haloPulse {
  0% { opacity: 0.6; transform: translate(-50%, -50%) scale(1); }
  100% { opacity: 0; transform: translate(-50%, -50%) scale(2.2); }
}

/* 选中节点置于最上层，避免被淡化或其他元素遮挡 */
.node.active { z-index: 100; }
/* 选中连线置顶于其他线 */
.line.active-line { z-index: 5; }

/* 弹窗相关 */
.popup-container {
  width: 100%;
  max-height: 50vh;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.popup-header {
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.popup-body {
  flex: 1;
  background: var(--color-gray-light);
  box-sizing: border-box;
  overflow-y: auto;
  padding: 20rpx;
  max-height: 70vh;
}

.sheet-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  align-content: flex-start;
  /* padding: 0 20rpx; */
}
.sheet-card {
  flex: 0 0 calc(50% - 10rpx);
  margin: 0;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
  padding: 16rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  min-width: 0;
}
.sheet-card-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--color-gray-normal);
  flex-shrink: 0;
}
.sheet-card-info {
  flex: 1;
  margin-left: 16rpx;
  min-width: 0;
}
.sheet-card-name {
  font-size: 28rpx;
  /* color: var(--color-primary-text); */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  max-width: 100%;
}
.relation-tag {
  margin-top: 8rpx;
  display: inline-block;
  padding: 6rpx 12rpx;
  font-size: 22rpx;
  color: var(--color-primary);
  background: var(--color-primary-light);
  border-radius: 999rpx;
}
.sheet-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.sheet-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: var(--color-gray-normal);
}

/* 重置 */
.fab-reset {
  position: absolute;
  right: 30rpx;
  bottom: calc(32rpx + env(safe-area-inset-bottom));
  z-index: 50;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(3rpx);
  color: var(--color-primary-text);
  border: 1rpx solid var(--color-primary-text);
  font-size: 26rpx;
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.15);
}

/* 操作提示 */
.operation-tip {
  position: absolute;
  left: 50%;
  bottom: calc(38rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  z-index: 50;
  background: rgba(255,255,255,0.9);
  color: var(--text-sub);
  font-size: 26rpx;
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
