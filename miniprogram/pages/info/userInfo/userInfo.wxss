.num-title {
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
  white-space: nowrap;
}
.small-title {
  font-size: 20rpx;
  font-weight: 300;
}

.content {
  width: 100%;
  padding: 0 0 100rpx 0;
}

/* 一些菜单 */
.menu-container {
  width: 100%;
  background-color: white;
  border-radius: 30rpx;
  overflow: hidden;
  padding-top: 30rpx;
  margin-top: -50rpx;
  box-shadow: 0rpx 10rpx 25rpx var(--color-ltblack-transparent);
}
.type-separator {
  height: 1rpx;
  background-color: var(--color-gray-normal);
  width: 80%;
  margin: 10rpx 10% 10rpx 10%;
}
.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 15rpx 15rpx 15rpx;
  position: relative;
}
.hiddenbtn {
  opacity:0;
	position: absolute;
	top: 10px;
	right: 10px;
}
.icon-and-text {
  display: flex;
  align-items: center;
}
.iconfont {
  font-size: 70rpx;
  margin: 0 30rpx 0  40rpx;
}
.label-small {
  font-size: 28rpx;
  flex: 1;
}
.right-arrow image {
  margin-right: 40rpx;
  height: 30rpx;
  width: 30rpx;
  margin-top: 15rpx;
  filter: invert(100%);
}