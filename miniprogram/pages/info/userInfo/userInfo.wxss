page {
  display: flex;
  width: 750rpx;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: var(--color-gray-light);
}

#big-circle {
  width: 1250rpx;
  height: 1150rpx;
  background-color: var(--color-primary);
  border-radius: 500rpx;
  position: absolute;
  left: -250rpx;
  top: -850rpx;
  z-index: -1;
}

/* 头像名字和角色 */
.user-container {
  display: flex;
  align-items: center;
  padding: 30rpx 0rpx ;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userName-container {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: calc(50% + 8rpx);
  background-color: white;
  border: 8rpx solid white;
  box-shadow: 0rpx 10rpx 20rpx var(--color-ltblack-transparent);
}

.badge {
  bottom: 5rpx;
  text-overflow: ellipsis;
  width: fit-content;
  white-space: nowrap;
  color: white;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}
.pro-badge {
  background-color: #FFD700;
}
.manager-badge {
  background-color: var(--color-primary-light);
  color: rgb(56, 56, 56);
}
.visitor-badge {
  background-color: var(--color-gray-max);
}

.user-name {
  width: 500rpx;
  height: fit-content;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 50rpx;
  font-weight: bold;
  color: var(--color-white);
}

/* 用户数据 */
.num-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 30rpx 0;
  border-radius: 30rpx;
  box-shadow: 0rpx 10rpx 25rpx var(--color-ltblack-transparent);
}

.num {
  display: flex;
  flex: 1; /* 平分宽度 */
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: auto;
  box-sizing: border-box;
  position: relative;
}

