/* miniprogram/pages/info/info.wxss */
page {
  width: 750rpx;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  background-color: #f7f7fa;
}

.mina-info {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: center;
  padding: 50rpx 0;
  /* box-shadow: 0rpx 10rpx 20rpx #d8d8d8; */
}

.buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.buttons .button {
  width: 330rpx;
  height: 182rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 10rpx #f2f2f2;
  margin-bottom: 15rpx;
}

