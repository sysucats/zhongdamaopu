/* miniprogram/pages/info/reward/reward.wxss */

.block {
  width: 690rpx;
  margin: 50rpx 30rpx 0 30rpx;
  padding: 50rpx 30rpx 20rpx 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #555;
  position: relative;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-wrap: wrap;
}

.block .title {
  font-size: 28rpx;
  font-weight: 500;
  background-color: #ffd101;
  display: inline-block;
  padding: 10rpx;
  box-shadow: 0 0 10rpx #555;
  position: absolute;
  top: -20rpx;
  left: -15rpx;
}

.block .desc {
  width: 100%;
  font-size: 30rpx;
  color: #2f2f2f;
  line-height: 50rpx;
}

.block .hl {
  font-weight: 600;
  /* background-color: lightgoldenrodyellow; */
  text-align: center;
}

.block .btn,
button {
  background-color: #ffd101;
  font-size: 30rpx;
  line-height: 40rpx;
  margin: 10rpx;
  padding: 20rpx 30rpx;
  border: 1rpx solid #888;
  border-radius: 10rpx;
}

/* 最后的小tip */
.tip {
  font-size: 28rpx;
  margin: 30rpx;
  color: #777;
}