/* miniprogram/pages/info/photoRank/photoRank.wxss */
#top-block {
  position: fixed;
  top: 0;
  width: 750rpx;
  height: 100rpx;
  background-color: #ffd101;
  z-index: -1;
}

.cen-block {
  width: 690rpx;
  height: auto;
  padding: 20rpx 50rpx;
  margin: 30rpx;
  box-sizing: border-box;
  background-color: white;
  border-radius: 10rpx;

  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;

  box-shadow: 0rpx 0rpx 10rpx #f0f0f0;
}

/* 未授权的 */
.unAuth .title {
  font-size: 30rpx;
}
.my-info image,
.avatar image.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  background-color: #f2f2f2;
}


/* 布局 */
.text.cen {
  text-align: center;
}
.text.right {
  text-align: right;
}

/* 文字大小 */
.text .title {
  font-size: 24rpx;
  color: #888;
}
.text .number {
  font-size: 50rpx;
  font-weight: 650;
}
.text .number.active {
  color: #ffd101;
}
.text .name {
  font-size: 32rpx;
}

/* 一行排名 */
.row {
  min-width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 0;
}
.row + .row {
  border-top: 1rpx solid #f8f8f8;
}
.row .rank {
  font-size: 32rpx;
  width: 80rpx;
  text-align: left;
}
.row .avatar {
  width: 120rpx;
  height: 120rpx;
  position: relative;
}
.row .avatar image.medal {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -6rpx;
  left: 0rpx;
}
.row .avatar image.avatar {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
}
.row .name {
  font-size: 36rpx;
  padding-left: 20rpx;
}
.row .photo_count {
  font-size: 50rpx;
  font-weight: 650;
  margin-left: auto;
}
.row .photo_count.active {
  color: #ffd101;
}

/* 最后的小tip */
.tip {
  font-size: 28rpx;
  margin: 30rpx;
  color: #777;
}

button {
  font-size: 30rpx;
  background-color: #ffd101;
  margin: 10rpx;
  border: 1rpx solid #888;
  border-radius: 10rpx;
}