/* components/badgeRank/badgeRank.wxss */
.tip {
  width: 100%;
  text-align: center;
  color: var(--color-gray-dark);
  font-size: 22rpx;
}

.badge-block {
  width: 750rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.badge-header {
  display: flex;
  flex-direction: row;
  padding: 0 30rpx;
  /* align-items: flex-end; */
  align-items: center;
}

.badge-img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 20rpx;
  /* background-color: white; */
}

.badge-info {
  width: 400rpx;
  margin-left: 20rpx;
}

.badge-name {
  font-size: 32rpx;
}

.badge-desc {
  font-size: 24rpx;
  color: var(--color-black-transparent);
}

.badge-to-detail {
  font-size: 24rpx;
  align-self: flex-end;
  text-decoration: underline;
}

.badge-list {
  border-radius: 50rpx;
  margin-top: -50rpx;
  padding: 50rpx;
  background-color: white;
}

.badge-cat {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  align-items: center;
}

.badge-cat-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}

.badge-cat-info {
  margin-left: 20rpx;
}
.badge-to-detail, .badge-cat-count {
  margin-left: auto;
}

.badge-cat-name {
  font-size: 32rpx;
}

.badge-cat-order {
  font-size: 22rpx;
  color: var(--color-gray-dark);
}

.badge-cat-campus {
  font-size: 26rpx;
  color: var(--color-black-light);
}

.badge-cat-count {
  font-size: 34rpx;
  color: var(--color-primary);
  font-weight: bold;
}

/* 分等级颜色 */

.badge-level-A .badge-img {
  filter: drop-shadow(0rpx 0rpx 7rpx var(--color-badge-A));
}

.badge-level-B .badge-img {
  filter: drop-shadow(0rpx 0rpx 7rpx var(--color-badge-B));
}

.badge-level-C .badge-img {
  filter: drop-shadow(0rpx 0rpx 7rpx var(--color-badge-C));
}

.badge-level-A .badge-name {
  color: var(--color-badge-A);
}

.badge-level-B .badge-name {
  color: var(--color-badge-B);
}

.badge-level-C .badge-name {
  color: var(--color-badge-C);
}