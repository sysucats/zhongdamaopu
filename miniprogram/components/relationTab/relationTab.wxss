@import "../../pages/public/wxss/iconfont.wxss";

/* 整体容器 */
.relation-section {
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

/* 关系列表 */
.relation-list {
  width: 100%;
  padding-bottom: calc(110rpx + env(safe-area-inset-bottom));
}

.relation-item {
  margin-bottom: 24rpx;
  width: 100%;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  display: flex;
}

/* 序号 */
.relation-index {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 18rpx;
  color: #fff;
  background-color: var(--color-gray-dark);
  opacity: 0.6;
  padding: 2rpx 12rpx;
  border-bottom-right-radius: 12rpx;
  z-index: 5;
}

.relation-content {
  flex: 1;
  padding: 20rpx 20rpx 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 关系定义组 */
.relation-meta {
  width: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin: 0 20rpx;
}

.relation-type {
  width: 80rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: var(--color-primary);
  background-color: var(--color-primary-light);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.relation-alias {
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 100%;
}

.relation-alias .iconfont {
  font-size: 32rpx;
}

.alias-text {
  font-size: 22rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100rpx;
}

.alias-icon {
  font-size: 20rpx;
  color: var(--color-gray);
  margin-left: 4rpx;
}

/* 如果备注为空 */
.relation-alias.empty .alias-text {
  color: var(--color-gray-dark);
  font-style: italic;
  font-size: 20rpx;
}

/* 竖向分割线 */
.v-line {
  width: 2rpx;
  height: 60rpx;
  background-color: var(--color-gray-normal);
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 猫咪信息 */
.relation-cat {
  flex: 1;
  display: flex;
  align-items: center;
  min-width: 0;
}

.relation-cat-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: var(--color-gray-normal);
  flex-shrink: 0;
}

.relation-cat-info {
  margin-left: 20rpx;
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.relation-cat-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.relation-cat-location {
  font-size: 22rpx;
  color: var(--color-gray-dark);
  align-self: flex-start;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 删除按钮 */
.relation-delete-btn {
  padding: 20rpx; /* 增大点击区域 */
  color: var(--color-gray-dark);
  transition: all 0.2s;
}

.relation-delete-btn .iconfont {
  font-size: 32rpx;
}

.relation-delete-btn:active {
  color: #FF3B30;
  transform: scale(1.1);
}

/* 移动操作 */
.move-action-bar {
  width: 70rpx;
  display: flex;
  flex-direction: column;
}

.move-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.move-btn .iconfont {
  font-size: 28rpx;
}

.move-btn.up, .move-btn.down {
  background-color: var(--color-gray);
  border-bottom: 1rpx solid #eee;
}

.move-btn.disabled {
  color: var(--color-gray);
  background-color: var(--color-gray-light);
}

.iconfont {
  font-family: 'iconfont';
  font-size: 55rpx;
}

/* 空数据提示 */
.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: var(--color-gray-max);
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 80rpx;
  color: #ddd;
  margin-bottom: 20rpx;animation: bounceIn 0.6s ease;
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    transform: scale(1);
  }
}

/* 弹窗 */
#search .popup-container {
  width: 100%;
  max-height: 80vh;
  background-color: white;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 顶部Header */
.popup-header {
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 1rpx solid var(--color-gray-light);
}

.popup-header-with-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid var(--color-gray-light);
}
.popup-header-with-actions .title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--color-black-min);
}
.popup-header-with-actions .btn-cancel {
  font-size: 28rpx;
  color: var(--color-gray-dark);
  padding: 10rpx;
}
.popup-header-with-actions .btn-save {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: bold;
  padding: 10rpx;
}

.search-input {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: var(--color-gray-light);
}

.input-icon {
  margin-right: 15rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
}

.input-field {
  flex: 1;
  height: 72rpx;
  background-color: white;
  border-radius: 36rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}


.search-results {
  flex: 1;
  max-height: 600rpx;
}

/* 关系卡片 */
.relation-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 20rpx;
}

.relation-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-width: 140rpx;
  width: auto;
  flex: 0 0 auto; /* 自适应卡片宽，多列自动换行 */
  border: 2rpx solid transparent; /* 统一边框厚度，避免高亮时高度抖动 */
}

.relation-card.highlight {
  animation: flash 600ms ease-in-out;
  border-color: var(--color-primary);
  background-color: var(--color-primary-light);
}
.relation-card.highlight .label-main {
  font-weight: 600;
  color: var(--color-primary-text);
}
.relation-card.highlight .label-inverse {
  color: var(--color-primary-dark);
}

.relaCard-header {
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}


.relaCard-left .relaCard-label {
  font-size: 28rpx;
  display: flex;
  align-items: baseline;
  flex-wrap: nowrap;
}

.relaCard-left .label-inverse {
  font-size: 22rpx;
  color: var(--color-gray-dark);
  font-weight: 400;
  margin-left: 6rpx;
}

.relaCard-right .iconfont {
  font-size: 26rpx;
  color: var(--color-gray-dark);
  display: inline-block;
  transform: rotate(90deg);
}

@keyframes flash {
  0% { box-shadow: 0 0 0 rgba(0,0,0,0); }
  50% { box-shadow: 0 0 12rpx rgba(var(--color-primary-light),0.35); }
  100% { box-shadow: 0 0 0 rgba(0,0,0,0); }
}

.search-empty {
  text-align: center;
  padding: 40rpx 0;
  color: var(--color-gray-dark);
  font-size: 26rpx;
}


/* 滚动区域 */
.popup-body {
  flex: 1;
  background: var(--color-gray-light);
  box-sizing: border-box;
  overflow-y: auto;
  padding: 20rpx;
  max-height: 70vh;
}

.popup-body .card {
  background: #fff;
  border-radius: 24rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}
.popup-body .card .card-label {
  font-size: 24rpx;
  font-weight: bold;
  color: var(--color-gray-max);
  text-transform: uppercase;
  margin-bottom: 20rpx;
}
.card-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 输入框组 */
.input-group {
  position: relative;
  margin-bottom: 40rpx;
}
.icon-tag {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #A855F7;
  font-size: 28rpx;
}
.main-input {
  background: transparent;
  height: auto;
  border-radius: 0;
  padding: 15rpx 24rpx 15rpx 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: var(--color-black-min);
  border: none;
  border-bottom: 1rpx solid var(--color-gray-light);
  line-height: 1.5;
  vertical-align: middle;
}
.ph-color { 
  color: var(--color-gray-dark);
}

/* 分段控制器 */
.segment-group {
  margin-top: 20rpx;
}
.segment-label {
  font-size: 24rpx;
  color: var(--color-gray-dark);
  margin-bottom: 16rpx;
}
.segment-control {
  display: flex;
  background: var(--color-gray-light);
  padding: 8rpx;
  border-radius: 16rpx;
  position: relative;
}

.segment-slider {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: calc((100% - 16rpx) / 3);
  height: calc(100% - 16rpx);
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
  transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.segment-item {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: var(--color-gray-max);
  border-radius: 12rpx;
  transition: all 0.2s;
  z-index: 1;
}

.segment-item.active {
  color: #333;
  font-weight: bold;
}
.gender-icon {
  width: 32rpx;
  height: 32rpx;
}
.segment-item .gender-icon {
  margin-right: 8rpx;
}

/* 切换开关 */
.toggle-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 6rpx 10rpx;
  border-radius: 30rpx;
}
.toggle-text {
  font-size: 22rpx;
  color: var(--color-gray-dark);
  margin: 0 10rpx;
  transition: color 0.2s;
}
.toggle-text.active { color: var(--color-black-min); font-weight: bold; }
.toggle-text.active-pri { color: var(--color-primary); font-weight: bold; }
.toggle-bg {
  width: 70rpx;
  height: 40rpx;
  background: var(--color-gray-light);
  border-radius: 20rpx;
  position: relative;
  transition: background 0.3s;
}
.toggle-bg.active { background: var(--color-primary); }
.toggle-dot {
  width: 32rpx;
  height: 32rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  transition: transform 0.3s;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}
.toggle-bg.active .toggle-dot {
  transform: translateX(30rpx);
}

/* 反向映射列表 */
.relation-inputs {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}
.row-input {
  display: flex;
  align-items: flex-start;
}
.icon-box {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.icon-box.blue { background: #EFF6FF; color: #3B82F6; }
.icon-box.pink { background: #FDF2F8; color: #EC4899; }
.icon-box.gray { background: #F3F4F6; color: #9CA3AF; }
.icon-box.purple { background: #F3E8FF; color: #A855F7; }

.input-right {
  flex: 1;
  padding-bottom: 10rpx;
}
.sub-label {
  display: block;
  font-size: 20rpx;
  color: var(--color-gray-dark);
  margin-bottom: 4rpx;
}
.line-input {
  font-size: 28rpx;
  color: var(--color-black-min);
  font-weight: 500;
  width: 100%;
  background: transparent;
  border: none;
  border-bottom: 1rpx solid var(--color-gray-light);
  padding: 10rpx 0;
}
.hint-text {
  font-size: 22rpx;
  color: var(--color-gray-dark);
  /* margin-top: 20rpx; */
  text-align: center;
}

/* 待完善类型 chips */
.chip-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.chip {
  background: var(--color-gray-light);
  color: #333;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}
.chip.active {
  background: var(--color-primary-light);
  color: var(--color-primary);
  font-weight: 600;
}
