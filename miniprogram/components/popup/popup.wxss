.popup-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  border-top-right-radius: 40rpx;
  border-top-left-radius: 40rpx;
  background-color: #fff;
  z-index: 999;
  padding: 20rpx 20rpx;
  padding-bottom: max(20rpx, constant(safe-area-inset-bottom));
  padding-bottom: max(20rpx, env(safe-area-inset-bottom));
  overflow: hidden;
  box-sizing: border-box;
  transition: height 400ms ease, bottom 400ms ease;
  background-color: var(--color-gray-light);
  filter: drop-shadow(0px 12rpx 12rpx rgba(0, 0, 0, 0.15));
  }

.popup-container.hidden {
  bottom: -100vh;
  }

