.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.3s, background-color 0.3s;
  pointer-events: none;
  z-index: 9999;
  touch-action: none;
}

.mask.show {
  background-color: rgba(0, 0, 0, 0.6);
  opacity: 1;
  pointer-events: auto !important;
  touch-action: none;
}